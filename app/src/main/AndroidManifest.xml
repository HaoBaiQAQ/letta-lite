<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.letta.lite.mobile"> <!-- 可根据项目实际包名修改 -->

    <!-- 基础权限声明（根据项目需求添加，如网络、存储等） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher" <!-- 可替换为项目图标 -->
        android:label="Letta Lite"
        android:supportsRtl="true"
        android:theme="@style/Theme.LettaLite" <!-- 需确保主题存在，无则替换为 @android:style/Theme.Material.Light -->
        android:hardwareAccelerated="true">

        <!-- 主Activity声明（与布局文件关联） -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </</intent-filter>
        </activity>

        <!-- 可选：添加其他组件（Service、Receiver等） -->
    </application>

</manifest>
